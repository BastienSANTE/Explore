input ../Config/ExploreSansCFG.mf;

export_setup;

% U+002F SOLIDUS - CODE 47
newchar(47, 4.15pt#, 1);
if MONOSPACE = true:
  z1r = (w - CURVE_BEARING, CAP_TOP);
  z2l = (CURVE_BEARING, CAP_BOTTOM);
else:
  z1r = (w - OBLIQUE_BEARING, CAP_TOP);
  z2l = (OBLIQUE_BEARING, CAP_BOTTOM);
fi

penpos1(STEM, 0); penpos2(STEM, 0);

penstroke z1e -- z2e;

italicize;

endchar;
end
